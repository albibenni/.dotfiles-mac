    "editor.minimap.enabled": false,
    "workbench.sideBar.location": "right",
    "files.associations": {
        "*.css": "tailwindcss"
    },
    "go.toolsManagement.autoUpdate": true,
    "git.openRepositoryInParentFolders": "never",
    "prettier.trailingComma": "all",
    "window.zoomLevel": 1,
    "gitlens.plusFeatures.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "github.copilot.advanced": {},
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "workbench.activityBar.location": "top",
    "editor.fontSize": 14,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "prisma.showPrismaDataPlatformNotification": false,
    "markdownlint.config": {
        "MD049": { "style": "asterisk" }
    },
    "redhat.telemetry.enabled": false,
    "prettier.tabWidth": 4,
    "[go]": {
        "editor.defaultFormatter": "golang.go"
    },
    "workbench.colorTheme": "Night Owl",
    "workbench.iconTheme": "vscode-icons",
    "git.ignoreRebaseWarning": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "window.customTitleBarVisibility": "auto",
    "vscode-neovim.highlightGroups.highlights": {
        "IncSearch": {
            "backgroundColor": "theme.editor.findMatchBackground"
        },
        "CurSearch": {
            "backgroundColor": "theme.editor.findMatchBackground"
        },
        "Search": {
            "backgroundColor": "theme.editor.findMatchHighlightBackground"
        },
        "Substitute": {
            "backgroundColor": "theme.editor.foreground",
            "color": "theme.editor.background"
        }
    },
    "vscode-neovim.neovimExecutablePaths.linux": "/opt/homebrew/bin/nvim"
