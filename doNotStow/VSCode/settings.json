{
    "editor.lineNumbers": "relative",
    "terminal.integrated.fontFamily": "BlexMono Nerd Font Propo",
    "editor.fontFamily": "BlexMono Nerd Font Propo",
    "editor.fontLigatures": true,
    "editor.fontWeight": "200",

    "vim.leader": "<Space>",
    "vim.useCtrlKeys": true,

    "vim.easymotion": true,
    "vim.incsearch": true,
    //"vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        // Undo redo
        {
            "before": ["<C-r>"],
            "commands": ["redo"]
        },
        //NAVIGATION
        // switch b/w buffers
        {
            "before": ["<S-h>"],
            "commands": ["workbench.action.focusLeftGroup"],
            "when": "editorTextFocus"
        },
        {
            "before": ["<S-l>"],
            "commands": ["workbench.action.focusRightGroup"],
            "when": "editorTextFocus"
        },

        //split
        {
            "before": ["leader", "v"],
            "commands": [":vsplit"],
            "when": "editorTextFocus"
        },
        {
            "before": ["leader", "s"],
            "commands": [":split"],
            "when": "editorTextFocus"
        },

        //panes
        {
            "before": ["leader", "h"],
            "commands": [":bprevious"],
            "when": "editorTextFocus"
        },
        {
            "before": ["leader", "l"],
            "commands": [":bnext"],
            "when": "editorTextFocus"
        },
        //find
        {
            "before": ["leader", "p", "s"],
            "commands": ["fin-it-faster.findWithinFiles"]
        },

        // NICE TO HAVE
        {
            "before": ["leader", "w"],
            "commands": ["workbench.action.files.save"]
        },
        {
            "before": ["leader", "d"],
            "commands": ["editor.action.deleteLines"]
            // dev/null
        },

        {
            "before": ["leader", "p", "f"], // like my vim settings
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["leader", "r", "n"], // like my vim settings
            "commands": ["editor.action.rename"],
            "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
        },

        {
            "before": ["leader", "f"],
            "commands": ["editor.action.formatDocument"]
        },
        //half page jumps
        {
            "before": ["<C-j>"],
            "commands": ["scrollPageDown", "cursorPageDown"]
        },
        {
            "before": ["<C-k>"],
            "commands": ["scrollPageUp", "cursorPageUp"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },

        {
            "before": ["K"],
            "commands": ["editor.action.moveLinesUpAction"]
        },
        {
            "before": ["J"],
            "commands": ["editor.action.moveLinesDownAction"]
        },
        {
            "before": ["leader", "d"],
            "commands": ["editor.action.deleteLines"]
            // dev/null
        },
        {
            "before": ["leader", "y"],
            "commands": ["editor.action.clipboardCopyAction"]
        }
    ],
    "editor.defaultFormatter": "esbenp.prettier-vscode",
